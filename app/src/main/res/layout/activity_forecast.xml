<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <ImageButton
      android:id="@+id/btn_forecast_back"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="16dp"
      app:layout_constraintTop_toTopOf="@id/text_forecast_header"
      app:layout_constraintBottom_toBottomOf="@id/text_forecast_header"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toLeftOf="@id/text_forecast_header"
      app:layout_constraintHorizontal_chainStyle="packed"
      android:background="@drawable/ic_back"
      />
  <TextView
      android:id="@+id/text_forecast_header"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="16dp"
      app:layout_constraintLeft_toRightOf="@id/btn_forecast_back"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:text="Forecast information"
      android:textSize="24dp"
      />
  <TextView
      android:id="@+id/text_forecast_sub_header"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="16dp"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/text_forecast_header"
      android:text="5 days ahead"
      android:textSize="18dp"
      />



  <TextView
      android:id="@+id/text_forecast_city_label"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginRight="16dp"
      app:layout_constraintRight_toLeftOf="@id/text_forecast_city"
      app:layout_constraintTop_toTopOf="@id/text_forecast_city"
      app:layout_constraintBottom_toBottomOf="@id/text_forecast_city"
      android:text="City name:"
      />
  <TextView
      android:id="@+id/text_forecast_city"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="16dp"
      app:layout_constraintBottom_toTopOf="@id/text_forecast_max_temp"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/text_forecast_sub_header"
      app:layout_constraintVertical_chainStyle="packed"
      tools:text="city_name"
      android:textSize="18dp"
      />

  <TextView
      android:id="@+id/text_forecast_maxtemp_label"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginRight="16dp"
      app:layout_constraintRight_toLeftOf="@id/text_forecast_max_temp"
      app:layout_constraintTop_toTopOf="@id/text_forecast_max_temp"
      app:layout_constraintBottom_toBottomOf="@id/text_forecast_max_temp"
      android:text="Max temp:"
      />
  <TextView
      android:id="@+id/text_forecast_max_temp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="16dp"
      app:layout_constraintTop_toBottomOf="@id/text_forecast_city"
      app:layout_constraintBottom_toTopOf="@id/text_forecast_min_temp"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      tools:text="maxTemperature"
      android:textSize="18dp"
      />

  <TextView
      android:id="@+id/text_forecast_mintemp_label"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginRight="16dp"
      app:layout_constraintRight_toLeftOf="@id/text_forecast_min_temp"
      app:layout_constraintTop_toTopOf="@id/text_forecast_min_temp"
      app:layout_constraintBottom_toBottomOf="@id/text_forecast_min_temp"
      android:text="Min temp:"
      />
  <TextView
      android:id="@+id/text_forecast_min_temp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="16dp"
      app:layout_constraintTop_toBottomOf="@id/text_forecast_max_temp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      tools:text="minTemperature"
      android:textSize="18dp"
      />

</android.support.constraint.ConstraintLayout>